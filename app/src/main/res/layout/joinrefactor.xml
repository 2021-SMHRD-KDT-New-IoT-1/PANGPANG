<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292424"
    tools:context=".joinRefactor">

    <Button
        android:id="@+id/btn_Refactor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_btn"
        android:fontFamily="@font/g_bold"
        android:onClick="onClick"
        android:text="수정"
        android:textColor="@color/button_text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_pwR"
        app:layout_constraintStart_toStartOf="@+id/edt_pwR"
        app:layout_constraintTop_toBottomOf="@+id/edt_pwR" />

    <EditText
        android:id="@+id/edt_idR"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background_edt"
        android:ems="10"
        android:fontFamily="@font/g_medium"
        android:hint="수정할 아이디"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColorHint="#E1D3D3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_pwR"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_edt"
        android:ems="10"
        android:fontFamily="@font/g_medium"
        android:hint="수정할 비밀번호"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColorHint="#E1D3D3"
        android:textColorLink="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_idR"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_idR"
        app:layout_constraintTop_toBottomOf="@+id/edt_idR" />


</androidx.constraintlayout.widget.ConstraintLayout>