<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#00000428"

                android:endColor="#00004E92"
                />
            <corners
                android:radius="5sp"/>
            <stroke
                android:color="#E1D3D3"
                android:width="3dp"/>

        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <gradient
                android:startColor="#14000428"

                android:endColor="#11004E92"
                />
            <corners
                android:radius="5sp"/>
            <stroke
                android:color="#8AE1D3D3"
                android:width="3dp"/>
        </shape>
    </item>

</selector>